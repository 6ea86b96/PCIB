[Unit]
Description=Pivx's distributed currency daemon
After=network.target

[Service]
User=pcib
Group=pcib

Type=forking
PIDFile=/var/lib/pcibd/pcibd.pid
ExecStart=/usr/bin/pcibd -daemon -pid=/var/lib/pcibd/pcibd.pid \
-conf=/etc/pcib/pcib.conf -datadir=/var/lib/pcibd -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
